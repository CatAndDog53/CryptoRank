<Window x:Class="CryptoRankApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:CryptoRankApp"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >

    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5" >
            <Button Content="Currencies"
                    Command="{Binding NavigateCommand}" 
                    CommandParameter="CurrenciesAreaView" 
                    Margin="5">
            </Button>
            <Button 
                Content="Converter"
                Command="{Binding NavigateCommand}" 
                CommandParameter="ConverterView" 
                Margin="5">
            </Button>
        </StackPanel>
        <ContentControl prism:RegionManager.RegionName="{x:Static local:RegionNames.MainContentRegion}" Margin="5"  />
    </DockPanel>
</Window>
